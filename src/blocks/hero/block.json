{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "renderkit/hero",
    "version": "1.0.0",
    "title": "RenderKit Hero",
    "category": "renderkit",
    "description": "A clean hero section for landing pages",
    "keywords": [
        "hero",
        "header",
        "landing"
    ],
    "icon": "slides",
    "textdomain": "renderkit",
    "supports": {
        "html": false,
        "align": [
            "full"
        ]
    },
    "attributes": {
        "blockId": {
            "type": "string",
            "default": ""
        },
        "heading": {
            "type": "string",
            "default": "Handgemachte Kerzen & Geschenkideen"
        },
        "description": {
            "type": "string",
            "default": "Handgemachte Kerzen und ausgewählte Deko für besondere Momente."
        },
        "buttonText": {
            "type": "string",
            "default": "Entdecken"
        },
        "buttonUrl": {
            "type": "string",
            "default": "#"
        },
        "theme": {
            "type": "string",
            "default": "dark"
        },
        "variant": {
            "type": "string",
            "default": "full",
            "enum": [
                "full",
                "minimal"
            ]
        }
    }
}