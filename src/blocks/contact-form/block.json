{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "renderkit/contact-form",
    "version": "1.0.0",
    "title": "Contact Form",
    "category": "renderkit",
    "description": "Simple contact form with customizable labels",
    "keywords": [
        "contact",
        "form",
        "email",
        "message"
    ],
    "icon": {
        "src": "<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='1.5' stroke-linecap='round' stroke-linejoin='round'><rect x='2' y='4' width='20' height='16' rx='2'/><path d='M22 6l-10 7L2 6'/><line x1='6' y1='12' x2='10' y2='12'/><line x1='6' y1='15' x2='8' y2='15'/></svg>"
    },
    "textdomain": "renderkit",
    "supports": {
        "html": false,
        "align": [
            "full",
            "wide"
        ]
    },
    "attributes": {
        "nameLabel": {
            "type": "string",
            "default": "Name"
        },
        "emailLabel": {
            "type": "string",
            "default": "Email"
        },
        "subjectLabel": {
            "type": "string",
            "default": "Subject"
        },
        "messageLabel": {
            "type": "string",
            "default": "Message"
        },
        "submitButtonText": {
            "type": "string",
            "default": "Send Message"
        },
        "privacyLabel": {
            "type": "string",
            "default": "I agree to the privacy policy."
        },
        "privacyRequired": {
            "type": "boolean",
            "default": true
        },
        "successMessage": {
            "type": "string",
            "default": "Thanks! Your message has been sent."
        },
        "errorMessage": {
            "type": "string",
            "default": "Something went wrong. Please try again."
        },
        "theme": {
            "type": "string",
            "default": "light",
            "enum": [
                "light",
                "dark"
            ]
        }
    }
}