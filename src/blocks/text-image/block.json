{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "renderkit/text-image",
    "version": "1.0.0",
    "title": "Text-Image",
    "category": "renderkit",
    "description": "Text and image side by side with optional CTA",
    "keywords": [
        "text",
        "image",
        "media",
        "content"
    ],
    "icon": {
        "src": "<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='1.5' stroke-linecap='round' stroke-linejoin='round'><rect x='3' y='3' width='18' height='18' rx='2'/><line x1='12' y1='3' x2='12' y2='21'/><line x1='15' y1='8' x2='19' y2='8'/><line x1='15' y1='12' x2='19' y2='12'/><line x1='15' y1='16' x2='18' y2='16'/><rect x='5' y='7' width='5' height='10' rx='1'/></svg>"
    },
    "textdomain": "renderkit",
    "supports": {
        "html": false,
        "align": [
            "full",
            "wide"
        ]
    },
    "attributes": {
        "heading": {
            "type": "string",
            "default": "Handgefertigt mit Liebe"
        },
        "description": {
            "type": "string",
            "default": "Jedes unserer Produkte wird mit größter Sorgfalt in unserer kleinen Manufaktur hergestellt. Wir verwenden nur hochwertige, nachhaltige Materialien."
        },
        "imageUrl": {
            "type": "string",
            "default": ""
        },
        "imageAlt": {
            "type": "string",
            "default": ""
        },
        "imageId": {
            "type": "number",
            "default": 0
        },
        "imagePosition": {
            "type": "string",
            "default": "right",
            "enum": [
                "left",
                "right"
            ]
        },
        "buttonText": {
            "type": "string",
            "default": ""
        },
        "buttonUrl": {
            "type": "string",
            "default": ""
        },
        "focalPoint": {
            "type": "object",
            "default": {
                "x": 0.5,
                "y": 0.5
            }
        },
        "imageScale": {
            "type": "string",
            "default": "cover",
            "enum": [
                "cover",
                "contain"
            ]
        },
        "theme": {
            "type": "string",
            "default": "light",
            "enum": [
                "light",
                "dark"
            ]
        }
    }
}