{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "renderkit/footer",
    "version": "1.0.0",
    "title": "Footer",
    "category": "renderkit",
    "description": "Premium footer with menu + optional InnerBlocks content (SSR-first).",
    "keywords": [
        "footer",
        "links",
        "legal"
    ],
    "icon": {
        "src": "<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='1.5' stroke-linecap='round' stroke-linejoin='round'><rect x='3' y='3' width='18' height='18' rx='2'/><line x1='3' y1='15' x2='21' y2='15'/><line x1='9' y1='18.5' x2='15' y2='18.5'/></svg>"
    },
    "textdomain": "renderkit",
    "supports": {
        "html": false,
        "align": [
            "full"
        ],
        "anchor": true
    },
    "attributes": {
        "menuSlug": {
            "type": "string",
            "default": "renderkit-footer"
        },
        "showLogo": {
            "type": "boolean",
            "default": true
        },
        "logoUrl": {
            "type": "string",
            "default": ""
        },
        "siteName": {
            "type": "string",
            "default": ""
        },
        "tagline": {
            "type": "string",
            "default": "Handgemacht. Minimal. Zeitlos."
        },
        "theme": {
            "type": "string",
            "default": "dark",
            "enum": [
                "light",
                "dark"
            ]
        }
    }
}