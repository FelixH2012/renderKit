{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "renderkit/example",
    "version": "1.0.0",
    "title": "RenderKit Example",
    "category": "renderkit",
    "description": "An interactive example block demonstrating React hydration",
    "keywords": [
        "example",
        "demo",
        "interactive"
    ],
    "icon": "star-filled",
    "textdomain": "renderkit",
    "supports": {
        "html": false,
        "className": true,
        "anchor": true,
        "align": [
            "wide",
            "full"
        ],
        "color": {
            "background": true,
            "text": true,
            "gradients": true
        },
        "spacing": {
            "margin": true,
            "padding": true
        },
        "typography": {
            "fontSize": true,
            "lineHeight": true
        }
    },
    "attributes": {
        "title": {
            "type": "string",
            "default": "Welcome to RenderKit"
        },
        "description": {
            "type": "string",
            "default": "This block is rendered with React and styled with Tailwind CSS."
        },
        "buttonText": {
            "type": "string",
            "default": "Click Me"
        },
        "clickCount": {
            "type": "number",
            "default": 0
        },
        "showCounter": {
            "type": "boolean",
            "default": true
        },
        "variant": {
            "type": "string",
            "default": "primary",
            "enum": [
                "primary",
                "secondary",
                "accent"
            ]
        }
    },
    "example": {
        "attributes": {
            "title": "Example Block",
            "description": "Preview of the RenderKit Example block",
            "buttonText": "Interactive Button",
            "showCounter": true
        }
    }
}